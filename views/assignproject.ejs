<div class="row">
  <div class="column">
  <div style="width: 41vw; height: 75vh;margin: 2vh; margin-top:7vh;padding-left: 3vh; background-color: #FF6382; border:2px solid white;">
  <p style="color:#ffffff;font-size:60px; margin-left: 5vh; margin-top:28vh;">Assign a Project</p>

    </div>
     </div>
  <div class="column">
   <div style="width: 45vw; height: 75vh; margin-left: 55vh; margin-top:7vh;padding:4vh; overflow: auto;border: 2px solid white;">
    
     <form action="/assignp" method="post">
        <label for="name">Intern's Name</label>
        <select id="name" name="sortfilter">
          <% dropdownVals.forEach(function(result) {%>
              <option value="<%= result.fullname %>"><%= result.fullname %></option>
          <% }); %>
          </select>
        
        <label for="Proj">Project</label>
        <select id="proj" name="sortfilter">
          <% dropdownVals.forEach(function(result) {%>
              <option value="<%= result.projname %>"><%= result.projname %></option>
          <% }); %>
          </select>
        <input type="submit" value="Submit">
      </form>
   </div>
    </div>
   </div>

 <div class="footer" id="myfooter">
 <img src="images/logo.png" align="left"  width="50" height="50" padding="2px">
